<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/depositphotos_55447983_stock_photo_abstract_light_blue_background"
    tools:context=".views.SecondRegisterFragmentView">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="730dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="AREAS DE ENSEÑANZA"
                android:textAlignment="center"
                android:textColor="#070707"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                app:srcCompat="@drawable/profesor" />

            <CheckBox
                android:id="@+id/cbMaths"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Matemáticas" />

            <CheckBox
                android:id="@+id/cbCommunication"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Comunicación"
                android:textAlignment="viewStart" />

            <CheckBox
                android:id="@+id/cbEnglish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inglés" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:backgroundTint="#2196F3"
                    android:id="@+id/local"
                    android:text="Mapa"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:text="Dirección: "
                android:textColor="#101010"
                android:textSize="14sp" />

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                tools:context=".SecondRegisterView" />

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#2196F3"
                android:gravity="center"
                android:text="Register"
                android:textAlignment="center"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>